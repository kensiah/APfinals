<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <TextView
        android:id="@+id/tv_model"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:text="X70"
        android:textSize="22sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_variant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Executive 2WD" />

        <TextView
            android:id="@+id/tv_pricePM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="109,800.00" />

        <TextView
            android:id="@+id/tv_priceEM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="109,800.00" />

        <TextView
            android:id="@+id/tv_priceLabuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="93,783.00" />

        <TextView
            android:id="@+id/tv_priceLangkawi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="94,154.00" />

    </LinearLayout>
</LinearLayout>